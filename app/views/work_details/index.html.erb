<p id="notice"><%= notice %></p>

<h1>Work Details</h1>

<table>
  <thead>
    <tr>
      <th>Media name</th>
      <th>Size</th>
      <th>Cost</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_details.each do |work_detail| %>
      <tr>
        <td><%= work_detail.media_name %></td>
        <td><%= work_detail.size %></td>
        <td><%= work_detail.cost %></td>
        <td><%= work_detail.details %></td>
        <td><%= link_to 'Show', work_detail %></td>
        <td><%= link_to 'Edit', edit_work_detail_path(work_detail) %></td>
        <td><%= link_to 'Destroy', work_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

